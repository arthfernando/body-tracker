<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :birthdate %>
        <%= form.date_field :birthdate %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>